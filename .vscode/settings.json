{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.formatOnSave": false,
  "eslint.alwaysShowStatus": true,
  "eslint.packageManager": "yarn",
  "eslint.workingDirectories": [
    { "pattern": "." },
    { "pattern": "src/*" },
    { "pattern": "tools/*" }
  ],
  "eslint.validate": [
    "javascript",
    "typescript",
  ],
  "typescript.tsdk": "node_modules/typescript/lib"
}
